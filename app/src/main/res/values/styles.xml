<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTitle" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/newzald_bold</item>
        <item name="android:textSize">@dimen/_20ssp</item>
    </style>

    <style name="AppContent" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/newzald_book</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/md_white_1000</item>
    </style>

    <style name="LatestNews" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/newzald_bold</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textColor">@color/md_white_1000</item>
    </style>

</resources>
